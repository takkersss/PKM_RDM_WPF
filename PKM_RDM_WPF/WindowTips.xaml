<Window x:Class="PKM_RDM_WPF.WindowTips"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKM_RDM_WPF"
        mc:Ignorable="d"
        Title="Tips" Height="270" Width="420" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <TextBlock Margin="10,10,10,10">
            - You can double-click on a Pokémon to change it using <LineBreak/> a dropdown list and a search bar.
            <LineBreak/>- You can hover your mouse over the ability to see its effect.
            <LineBreak/>- The "Copy Team" button copies the team in Showdown! format <LineBreak/> into the clipboard
        </TextBlock>
    </Grid>
</Window>
